{
    "name": "dpsoft/pay.ir",
    "description": "Pay.ir online payment - درگاه پرداخت آسان پرداخت به زبان PHP",
    "keywords": [
        "dpsoft",
        "pay.ir"
    ],
    "homepage": "https://github.com/dpsoft/pay.ir",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Dpsoft",
            "email": "info@dpsoft.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1|^8",
        "rmccue/requests": ">=1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Dpsoft\\Pay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dpsoft\\Pay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
